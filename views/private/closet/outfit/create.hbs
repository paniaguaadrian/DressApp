<div>
    <h2>Add an outfit</h2>
    <form action="/mycloset/add-outfit" method="post">
        <label for="">Name:</label>
        <input type="text" name="name">

        <label for="">Description:</label>
        <input type="text" name="description">
        

        
        
        <select name="imageTop" id="">
            {{#each topItems}}
            <option value="{{this.image}}">{{this.name}}</option>
           {{/each}}
        </select>
        
        
         <select name="imageBottom" id="">
            {{#each bottomItems}}
            <option value="{{this.image}}">{{this.name}}</option>
             {{/each}}
        </select>
       
        
         <select name="imageFeet" id="">
            {{#each feetItems}}
            <option value="{{this.image}}">{{this.name}}</option>
            {{/each}}
        </select>
        
      

        <button type="submit">ADD</button>
    </form>
    <button><a href="/mycloset">BACK</a></button>
</div>
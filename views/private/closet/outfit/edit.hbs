<div class="container-container">
<div class="add-item-container">
  <h3 class="add-item-title">Edit "{{ outfit.name }}" outfit</h3>
  <hr class="divider-section-app" />
  <div class="container-container-add">
  <form action="/mycloset/{{ outfit._id }}/edit-outfit" method="post">
    <div class="add-item-form">
      
        <label class="add-item-label" for="">Outfit's name:</label>
        <input
          class="add-item-input"
          type="text"
          name="name"
          value="{{ outfit.name }}"
        />
      
      <label class="add-item-label" for="">Outfit's description:</label>
      <input
        class="add-item-input"
        type="text"
        name="description"
        value="{{ outfit.description }}"
      />
      <h6 class="select-clothes-title">Select your clothes</h6>
      <h6 class="select-item-title">Cover your shoulders</h6>
      <select class="select-clothes" name="imageTop" id="">
        {{#each topItems}}
        <option value="{{ this.image }}">{{ this.name }}</option>
        {{/each}}
      </select>
      <h6 class="select-item-title">Cover your legs</h6>
      <select class="select-clothes" name="imageBottom" id="">
        {{#each bottomItems}}
        <option value="{{ this.image }}">{{ this.name }}</option>
        {{/each}}
      </select>
      <h6 class="select-item-title">Cover your feet</h6>
      <select class="select-clothes" name="imageFeet" id="">
        {{#each feetItems}}
        <option value="{{ this.image }}">{{ this.name }}</option>
        {{/each}}
      </select>
      <div class="user-btn">
        <button class="edit-btn-item" type="submit">Add</button>
        <button class="delete-item-btn">
          <a href="/mycloset" style="color: white">Back</a>
        </button>
      </div>
    </div>
  </form>
  </div>
</div>
</div>
    

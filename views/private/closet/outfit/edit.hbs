<div>
    <h2>Edit this outfit</h2>
    <form action="/mycloset/{{outfit._id}}/edit-outfit" method="post">
        <label for="">Name:</label>
        <input type="text" name="name" value="{{outfit.name}}">

        <label for="">Description:</label>
        <input type="text" name="description" value="{{outfit.description}}">

        <select name="imageTop" id="" value="{{outfit.imageTop}}">
            {{#each topItems}}
            <option value="{{this.image}}">{{this.name}}</option>
            {{/each}}
        </select>

         <select name="imageBottom" id="" value="{{outfit.imageTop}}">
            {{#each bottomItems}}
            <option value="{{this.image}}">{{this.name}}</option>
            {{/each}}
        </select>

         <select name="imageFeet" id="" value="{{outfit.imageTop}}">
            {{#each feetItems}}
            <option value="{{this.image}}">{{this.name}}</option>
            {{/each}}
        </select>

        <button type="submit">ADD</button>
    </form>
    <button><a href="/mycloset">BACK</a></button>
</div>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{!-- Materialize css --}}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />

    {{!-- Font-awesome --}}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
      crossorigin="anonymous"
    />

    {{!-- Google-fonts --}}

    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&family=Poiret+One&display=swap"
      rel="stylesheet"
    />

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />

    {{!-- Stylesheets css --}}
    <link rel="stylesheet" href="/css/style.css" />

    <title>DressApp</title>
  </head>
  <body>
    <div id="holder">
      {{> top_page_mobile}}

      <div id="body">
        <h1>myCloset</h1>

        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="pill-navbar"
              id="pills-clothes-tab"
              data-toggle="pill"
              href="#pills-clothes"
              role="tab"
              aria-controls="pills-clothes"
              aria-selected="false"
              >Clothes</a
            >
          </li>
          <li class="nav-item" role="presentation">
            <a
              class="pill-navbar"
              id="pills-collections-tab"
              data-toggle="pill"
              href="#pills-outfits"
              role="tab"
              aria-controls="pills-outfits"
              aria-selected="false"
              >Outfits</a
            >
          </li>

          <li class="nav-item" role="presentation">
            <a
              class="pill-navbar"
              id="pills-collections-tab"
              data-toggle="pill"
              href="#pills-collections"
              role="tab"
              aria-controls="pills-collections"
              aria-selected="true"
              >Collections</a
            >
          </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
          <div
            class="tab-pane fade show active"
            id="pills-clothes"
            role="tabpanel"
            aria-labelledby="pills-clothes-tab"
          >
            <form action="/mycloset/add-item">
              <button type="submit">New clothes</button>
            </form>
            <h3>My clothes</h3>
            {{#each userUpdated.items}}
            <div>
              <a href="{{ this._id }}">{{ this.name }}</a>
              <p>{{ this.description }}</p>
              <img src="{{ this.image }}" alt="picture" style="width: 100px" />
              <form action="/mycloset/{{ this._id }}/edit-item">
                <button type="submit">Edit</button>
              </form>
              <form action="/mycloset/{{ this._id }}/delete-item" method="post">
                <button type="submit">Delete</button>
              </form>
            </div>
            {{/each}}
          </div>
          <div
            class="tab-pane fade"
            id="pills-outfits"
            role="tabpanel"
            aria-labelledby="pills-outfits-tab"
          >
            <form action="/mycloset/add-outfit">
              <button type="submit">New outfit</button>
            </form>
            <h3>My outfits</h3>
            {{#each userUpdated.outfits}}
            <div>
              <a href="{{ this._id }}">{{ this.name }}</a>
              <p>{{ this.description }}</p>
              <img
                src="{{ this.imageTop }}"
                alt="picture"
                style="width: 100px"
              />
              <img
                src="{{ this.imageBottom }}"
                alt="picture"
                style="width: 100px"
              />
              <img
                src="{{ this.imageFeet }}"
                alt="picture"
                style="width: 100px"
              />
              <form action="/mycloset/{{ this._id }}/edit-outfit">
                <button type="submit">Edit</button>
              </form>
              <form
                action="/mycloset/{{ this._id }}/delete-outfit"
                method="post"
              >
                <button type="submit">Delete</button>
              </form>
            </div>
            {{/each}}
          </div>
          <div
            class="tab-pane fade"
            id="pills-collections"
            role="tabpanel"
            aria-labelledby="pills-collections-tab"
          >
            <form action="/mycloset/add-collection">
              <button type="submit">New collection</button>
            </form>
            <h3>My collections</h3>
            {{#each userUpdated.collections}}
            <div>
              <h3>{{ this.name }}</h3>
              <p>{{ this.description }}</p>
              <form action="/mycloset/{{ this._id }}/edit-collection">
                <button type="submit">Edit this collection</button>
              </form>
              <form action="/mycloset/{{ this._id }}/add-collection">
                <button type="submit">Add outfits to this collection</button>
              </form>
              <form
                action="/mycloset/{{ this._id }}/delete-collection"
                method="post"
              >
                <button type="submit">Delete collection</button>
              </form>
            </div>
            {{/each}}
          </div>
        </div>
      </div>

      {{> menu_mobile}}
    </div>

    <!-- Boostrap javascript -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
      integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
      integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
      crossorigin="anonymous"
    ></script>
    <!-- Materialize javascript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </body>
</html>

<h1> Add an item</h1>
<a href="/add-item">New clothes</a>

{{#each allItems}}
<div>
    <a href="{{this._id}}">{{this.name}}</a>
    <p>{{this.description}}</p>
    <p>{{this.image}}</p>
    <form action="/{{this._id}}/edit">
        <button type="submit">Edit</button>
    </form>
    <form action="/{{this._id}}/delete" method="post">
        <button type="submit">Delete</button>
    </form>
</div>
{{/each}}
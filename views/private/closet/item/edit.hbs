<div>
    <h2>{{item.name}}</h2>
    <form action="/mycloset/{{item._id}}/edit-item" method="post" enctype="multipart/form-data">
        <label for="">Name:</label>
        <input type="text" name="name" value="{{item.name}}">

        <label for="">Description:</label>
        <input type="text" name="description" value="{{item.description}}">

        <img src="{{item.image}}" alt="" style="width: 100px">
        <input type="hidden" name="imageBefore" value="{{item.image}}">

        <label for="">Image:</label>
        <input type="file" name="photo" value="{{item.image}}">
        
        <input type="radio" name="type" value="top" {{{setChecked 'top' item.type}}}>
        <label for="">Top</label><br>
        <input type="radio" name="type" value="bottom" {{{setChecked 'bottom' item.type}}}>
        <label for="">Bottom</label><br>
        <input type="radio" name="type" value="feet" {{{setChecked 'feet' item.type}}}>
        <label for="">Feet</label>

        <label for="">Brand:</label>
        <input type="text" name="brand" value="{{item.brand}}">

        <label for="">Price:</label>
        <input type="text" name="price" value="{{item.price}}">
        
        <button type="submit">EDIT</button>
    </form>
    <button><a href="/mycloset">BACK</a></button>
</div>
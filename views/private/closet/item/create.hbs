<div class="add-item-container">
  <h3 class="add-item-title">Add new clothes</h3>
  <hr class="divider-section-app" />
  {{#if successMessage}}
  <div class="alert alert-primary" role="alert">
    {{ successMessage }}
  </div>
  {{/if}}

  <form action="/mycloset/add-item" method="post" enctype="multipart/form-data">
    <div class="add-item-form">
      <label class="add-item-label" for="">Clothes name:</label>
      <input class="add-item-input" type="text" name="name" />

      <label class="add-item-label" for="">Clothes description:</label>
      <input class="add-item-input" type="text" name="description" />

      <label class="add-item-label" for="">Clothes image:</label>
      <input class="add-item-input" type="file" name="photo" />
      <div class="add-item-radio">
        <h6>Type of clothes</h6>
        <div class="add-item-radio-item">
          <input type="radio" name="type" value="top" />
          <label class="add-item-radio-label" for=""
            >Cover your shoulders</label
          >
        </div>
        <div class="add-item-radio-item">
          <input type="radio" name="type" value="bottom" />
          <label class="add-item-radio-label" for="">Cover your legs</label>
        </div>
        <div class="add-item-radio-item">
          <input type="radio" name="type" value="feet" />
          <label class="add-item-radio-label" for="">Cover your feet</label>
        </div>
      </div>

      <label class="add-item-label" for="">Brand:</label>
      <input class="add-item-input" type="text" name="brand" />

      <label class="add-item-label" for="">Price:</label>
      <input class="add-item-input" type="text" name="price" />
      <div class="user-btn">
        <button class="edit-btn-item" type="submit">Add</button>
        <button class="delete-item-btn">
          <a style="color: white" href="/mycloset">Back</a>
        </button>
      </div>
    </div>
  </form>
</div>
